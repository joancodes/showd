<h1 class="current-category"> <%= params[:category] %></h1>

<% if @plays.count == 0 %>
<h3>There are no plays in this category</h3>
<% else %>
    
    <div class="row">
        <% @plays.each do |play| %>
        <div class="col-md-3">
            <a href="/plays/ <%= play.id %>">
            <%if play.image.attached?%>
            <%= image_tag play.image, class: "play" %>
            <% end %>
            </a> 
        </div>  
        <% end %>
    </div>
<% end %>